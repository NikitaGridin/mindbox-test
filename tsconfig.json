{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "types": ["@testing-library/jest-dom", "vitest/globals"],
    "strict": true,
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx", "./vitest.setup.ts"],
  "exclude": ["node_modules"]
}
